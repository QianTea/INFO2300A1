@model CreditCardViewModel
@{
    ViewData["title"] = ViewBag.Action + " Credit Card";
    string action = ViewBag.Action + "CreditCard";
}
<div asp-validation-summary="All" class="text-danger" id="txtError"></div>
<div class="row justify-content-center">
    <div class="col-xl-5 col-md-8">
        <form method="post" asp-action="@action" asp-controller="Profile">
            <label asp-for="CardNumber">CardNumber</label>
            <input type="text" asp-for="CardNumber" id="txtCardNumberInput" class="form-control" />
            <label asp-for="CVV">CVV</label>
            <input type="text" asp-for="CVV" id="txtCVV" class="form-control" />
            <label asp-for="ExpiryDate">ExpiryDate</label>
            <input type="date" asp-for="ExpiryDate" id="dateExpiryDate" class="form-control" />
            </br>
            <input type="hidden" asp-for="CreditCardId" />
        
            <input type="submit" id="btnSubmit" class="btn btn-success btn-change" />
        </form>
    </div>
</div>
