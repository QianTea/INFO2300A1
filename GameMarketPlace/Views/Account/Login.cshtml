@using GameMarketPlace.Models.ViewModels;
@model LoginViewModel
@{
    ViewBag.Title = "Login";
}



<div asp-validation-summary="ModelOnly" class="text-danger" id="txtError"></div>
    <div class="row justify-content-center">
      <div class="col-xl-5 col-md-8">
        <h1>Login</h1>
        <form method="post" asp-action="Login" asp-controller="Account" asp-route-returnUrl="@Model.ReturnUrl" class="bg-dark  rounded-5 shadow-5-strong p-5">            
            <label>Username:</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input asp-for="UserName" class="form-control" id="txtUsername" />
            
            <label>Password:</label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" asp-for="Password" class="form-control" id="txtPassword" />
            <div class="form-check">
                <input class="form-check-input" type="checkbox" title="Remember Me" asp-for="RememberMe" class="form-check" />
                <label class="form-check-label">Remember Me</label>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary" id="btnSubmit">
                    Log In  
                </button>
            </div>
            
            <div class="text-center">
                <a asp-action="ForgotPassword" asp-controller="Account">Forgot password?</a>
            </div>
            <p></p>
            <div class="dividing-line"><h2>OR</h2></div>
            <p></p>
            <div class="text-center">
                <p>Do not have an account?</p>
            </div>
            <div class="text-center">
                <a asp-action="Register" asp-controller="Account"class="btn btn-warning">Join Us Now!</a>
            </div>
        </form>
    </div>
</div>