@using GameMarketPlace.Models.ViewModels;
@using System.Web;
@model RegisterViewModel
@{
    ViewBag.Title = "Register";
} 

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="row justify-content-center">
    <div class="col-xl-5 col-md-8">
        <h1>Set Up Account</h1>
        <form method="post" asp-action="Register" class="bg-dark  rounded-5 shadow-5-strong p-5">
            <label>Username:</label>
            <span asp-validation-for="UserName" class="text-danger"></span>
            <input asp-for="UserName" class="form-control" id="txtUsername" />                       

            <label>Email:</label>
            <span asp-validation-for="Email" class="text-danger"></span>
            <input asp-for="Email" class="form-control" id="txtEmail" />            

            <label>Password</label>
            <span asp-validation-for="Password" class="text-danger"></span>
            <input type="password" asp-for="Password" class="form-control" id="txtPassword" />
            
            <label>Confirm Password:</label>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            <input type="password" asp-for="ConfirmPassword" class="form-control" id="txtConfirmPassword" />

            <p></p>
            <div class=" text-center">
            <dnt-captcha asp-captcha-generator-max="99999"
                            asp-captcha-generator-min="11111"
                            asp-captcha-generator-language="English"
                            asp-captcha-generator-display-mode="ShowDigits"
                            asp-use-relative-urls="true"
                            asp-placeholder="Enter Captcha"
                            asp-back-color="fff"
                            asp-fore-color="000"
                            asp-text-box-class="text-box form-control"
                            asp-text-box-template="<span class='input-group-prepend'><span class='form-group-text'></span><span class='form-group-text'></span>{0}"
                            asp-validation-error-message="Please enter the captcha code"
                            asp-validation-message-class="text-danger"
                            asp-refresh-button-class="fas fa-redo btn-sm"
                            asp-show-refresh-button="true"
                            asp-use-noise="false"
                            class="h-80"
                        />
            </div>
            <p></p>
            <div class="offset-4">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>
            <p></p>

            <div class="offset-2">
                <p> Already registered? <a asp-action="Login" asp-controller="Account">Log In</a></p>
            </div>
            </form>
    </div>
    <p class="text-success">@ViewBag.Message</p>
</div>
